<div>
  <table class="table table-condensed table-bordered">
    <tr>
      <th>姓名</th>
      <th>性别</th>
      <th>出生日期</th>
      <th>进入公司时间</th>
      <th>建行卡号</th>
      <th>婚姻状况</th>
      <th cospan="2">操作</th>
    </tr>
    <% for i in 0..@employees.size-1%>
    <% employee = @employees.at(i)%>
    <% if employee %>
    <tr>
      <td><%=employee.name%></td>
      <td><%=employee.gender%></td>
      <td><%=employee.birthday%></td>
      <td><%=employee.join_company_date%></td>
      <td><%=employee.bank_card_number%></td>
      <td><%=employee.marriage_status%></td>
      <td><%=link_to "查看",profile_employee_path(employee) %></td>
      <td><%=link_to "删除",employee,:confirm => "确定删除?",:method => :delete %></td>
    </tr>
    <%end%>
    <%end%>
  </table>
</div>
<div class="digg_pagination right">
  <%= will_paginate @employees, :container => false %>
</div>
